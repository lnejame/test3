<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=  yield(:title) %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= params[:controller] %>">
    <header class="navbar navbar-fixed-top">
    	<div class="offset2">
    		<a class="brand" href="/"><%= image_tag("HGI_EmailSignature.png", :alt => "logo") %>
		</a>
    	</div>
    	
      <nav class="navbar-inner">
        <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About", 'http://www.harrington-group.com/company/about.aspx'  %></li>
          <li><%= link_to "Contact Us", 'http://www.harrington-group.com/company/contactus.aspx'  %></li>
          <li><%= link_to "Help", 'http://www.harrington-group.com/support/'  %></li>
        </ul>
            <div class="container">
              <% if user_signed_in? %>
              <ul class="nav pull-right">
                <li><%= link_to current_user.email, edit_user_registration_path %></li>
                <li><%= link_to 'List', info_forms_path %></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
              <% else %>
              <ul class="nav pull-right">
                <li><%= link_to "Login", new_user_session_path %></li>
                <li><%= link_to "|", new_user_registration_path %></li>
              </ul>
            <% end %>
            </div>
          </div>
        </div>
      </nav>
    </header>
    
       
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <%= yield %>
            	
            
              
             </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <footer class="footer">
	<small class="offset2">
		<a href="http://www.harrington-group.com"><%= image_tag("HGI_EmailSignature.png", :alt => "logo") %></a>
		
	</small>
	
  </footer>
  </body>
 
</html>